<%= render "users/header2" %>

<%# モーダルウィンドウ %>
<div id="mask" class="hidden"></div>
  <div id="modal" class="hidden">
    <p>モーダルウィンドウ<p>
  </div>
<%# //モーダルウィンドウ %>

<div class="index_main">
  <div class="index_main_left">
    <div class="index_sort_list">リスト並び替え</div>
    <div class="index_field">
      <ul>
      <% @lists.each do |list| %>
        <li><%= link_to list.list_name, list_path(list.id), class: "index_list_name" %></li>
      <% end %>
      </ul>
    </div>
    <div class="index_lower_left">
      タグ検索フォーム
    </div>
  </div>

  <div class="index_main_right">
    <div class="index_list_field">
      <div class="index_list_upper">
        <div class="index_list_upper_left">
          <div><%= @list.list_name %></div>
          <div>いいね</div>
          <div><%= @list.privacy.name %></div>
        </div>
        <div class="index_list_upper_right">
        <% if @list.user_id == current_user.id %>
          <div><%= link_to '編集', edit_list_path(@list.id), remote: true %></div>
          <div><%= link_to '削除', list_path(@list.id), method: :delete %></div>
        <% end %>
        </div>
      </div>
      <div class="index_list_lower">
        <div><%= @list.list_text %></div>
      </div>
    </div>
    <div class="index_sort_item">アイテム並び替え
    </div>
    <div class="index_item_field">
      <div class="index_item_inner">
        <div>アイテム名</div>
        <div>編集</div>
        <div>削除</div>
        <div>アイテム説明</div>
        <div>アイテム画像</div>
      </div>
    </div>
    <div class="index_lower_right">アイテム追加フォーム
    </div>
  </div>
</div>
